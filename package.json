{
	"name": "sveltekit-boilerplate",
	"version": "0.0.1",
	"scripts": {
		"build": "npm run build:svelte-kit && npm run build:storybook",
		"build:svelte-kit": "svelte-kit build",
		"build:storybook": "build-storybook -o ./build/storybook",
		"clean": "npm run clean:build",
		"clean:build": "rm -rf ./build",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"ci:test": "npm run ci:test:check && npm run ci:test:lint && npm run ci:test:unit && npm run ci:test:integration && npm run ci:test:storybook",
		"ci:test:check": "npm run ci:test:check:cypress && npm run ci:test:check:svelte",
		"ci:test:check:cypress": "svelte-check --tsconfig ./tsconfig.cypress.json",
		"ci:test:check:svelte": "svelte-check --tsconfig ./tsconfig.json",
		"ci:test:lint": "npm run lint",
		"ci:test:unit": "npm run test:unit",
		"ci:test:integration": "start-server-and-test dev:server http-get://localhost:3000 test:integration:app",
		"ci:test:storybook": "start-server-and-test dev:storybook http-get://localhost:6006/iframe.html test:integration:storybook",
		"dev:integration:app": "PWDEBUG=1 playwright test --config=playwright.config.ts --timeout=0 --headed --workers=1",
		"dev:integration:storybook": "PWDEBUG=1 playwright test --config=playwright.storybook.ts --timeout=0 --headed --workers=1",
		"dev:server": "svelte-kit dev",
		"dev:storybook": "start-storybook -p 6006 -c .storybook",
		"format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
		"lint": "npm run lint:format && npm run lint:eslint",
		"lint:eslint": "eslint --ignore-path .gitignore .",
		"lint:format": "prettier --ignore-path .gitignore --check --plugin-search-dir=. .",
		"package": "svelte-kit package",
		"preview": "svelte-kit preview",
		"test": "npm run test:unit",
		"test:integration:app": "playwright test --config=playwright.config.ts",
		"test:integration:storybook": "playwright test --config=playwright.storybook.ts",
		"test:unit": "jest src/",
		"test:watch:integration": "start-server-and-test dev:server http-get://localhost:3000 dev:integration:app",
		"test:watch:storybook": "start-server-and-test dev:storybook http-get://localhost:6006/iframe.html dev:integration:storybook",
		"test:watch:unit": "npm run test:unit -- --watch"
	},
	"svelte": "src/lib/index.ts",
	"type": "module",
	"devDependencies": {
		"@playwright/test": "^1.17.1",
		"@storybook/addon-actions": "^6.4.9",
		"@storybook/addon-essentials": "^6.4.9",
		"@storybook/addon-links": "^6.4.9",
		"@storybook/addon-svelte-csf": "^1.1.0",
		"@storybook/svelte": "^6.4.9",
		"@sveltejs/adapter-static": "^1.0.0-next.22",
		"@sveltejs/kit": "^1.0.0-next.202",
		"@testing-library/jest-dom": "^5.16.1",
		"@testing-library/svelte": "^3.0.3",
		"@types/jest": "^27.0.3",
		"@typescript-eslint/eslint-plugin": "^5.8.0",
		"@typescript-eslint/parser": "^5.8.0",
		"babel-loader": "^8.2.3",
		"cypress": "^9.1.1",
		"eslint": "^8.5.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-storybook": "^0.5.5",
		"eslint-plugin-svelte3": "^3.2.1",
		"jest": "^27.4.5",
		"jest-environment-jsdom": "^27.4.4",
		"prettier": "^2.5.1",
		"prettier-plugin-svelte": "^2.5.1",
		"start-server-and-test": "^1.14.0",
		"storybook-builder-vite": "^0.1.11",
		"svelte": "^3.44.3",
		"svelte-check": "^2.2.11",
		"svelte-jester": "^2.1.5",
		"svelte-loader": "^3.1.2",
		"svelte-preprocess": "^4.10.1",
		"svelte2tsx": "^0.4.12",
		"ts-jest": "^27.1.2",
		"tslib": "^2.3.1",
		"typescript": "^4.5.4"
	}
}
